config CHIP_STM32F1
	bool "STM32F1"
	select ARCHITECTURE_ARMV7_M
	select ARCHITECTURE_ARM_CORTEX_M3
	select ARCHITECTURE_ARM_CORTEX_M3_R1P1
	select CHIP_STM32_GPIOV1
	select CHIP_STM32_GPIOV1_HAS_GPIOA
	select CHIP_STM32_GPIOV1_HAS_GPIOB
	select CHIP_STM32_GPIOV1_HAS_GPIOC
	select CHIP_STM32_GPIOV1_HAS_GPIOD
	select CHIP_STM32_SPIV1
	select CHIP_STM32_SPIV1_HAS_SPI1
	select CHIP_STM32_USARTV1
	select CHIP_STM32_USARTV1_HAS_USART1
	select CHIP_STM32_USARTV1_HAS_USART2
	help
		STM32F1 chip family
